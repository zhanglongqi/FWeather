<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/widget_margin"
        android:gravity="center">

    <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:padding="@dimen/widget_padding"
            tools:ignore="UselessParent">

        <include layout="@layout/include_widgetbuttons"/>

        <ImageView
                android:id="@+id/img_weathericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/spacing_single"
                android:scaleType="centerInside"
                android:src="@drawable/weather_clear_day"
                android:contentDescription="@string/cdesc_weathericon"/>

        <TextView
                android:id="@+id/txt_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_weathericon"
                android:bufferType="spannable"
                tools:text="Here goes the weather"
                style="@style/MainText"/>

        <TextView
                android:id="@+id/txt_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_weather"
                android:bufferType="spannable"
                tools:text="Here goes the temperature"
                style="@style/SmallText"/>


        <TextView
            style="@style/SmallText"
            tools:text="SPI"
            android:id="@+id/txt_SPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_weathericon"
            android:bufferType="spannable"
            android:layout_above="@+id/txt_weather"
            android:clickable="false"
            android:textColor="@color/temp_cold" />

    </RelativeLayout>

</FrameLayout>